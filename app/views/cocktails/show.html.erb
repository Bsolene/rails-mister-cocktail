
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('');">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6">
        <div class="banner-content wrapper-grey">
          <h1 class="margin-bottom"><%= @cocktail.name %></h1>
          <ul class="list-unstyled">
            <% @cocktail.doses.each do |dose| %>
              <li class="margin"><%= dose.description %> <%= dose.ingredient.name %> |
                <%= link_to 'Delete a dose', dose_path(dose), method: :delete, class: 'btn btn-danger btn-xs' %>
              </li>
            <% end %>
          </ul>
          <%= link_to 'Back Home', cocktails_path, class: 'btn btn-success' %>
        </div>
      </div>

      <div class="col-xs-12 col-sm-6">
        <h3 class="text-center">Add a new dose</h3>
        <div class="wrap-dose">
          <%= simple_form_for [@cocktail, @dose] do |f| %>
            <%= f.input :description %>
            <%= f.input :ingredient_id, collection: Ingredient.all.order(:name) %>
            <%= f.button :submit %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
